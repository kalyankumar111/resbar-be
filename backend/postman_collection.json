                {
                    "name": "Validate QR Token",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/public/table/:qr_token/validate",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "public",
                                "table",
                                ":qr_token",
                                "validate"
                            ],
                            "variable": [
                                {
                                    "key": "qr_token",
                                    "value": "REPLACE_WITH_ACTUAL_TOKEN"
                                }
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
